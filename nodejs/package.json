{
  "name": "clawdeck",
  "version": "1.0.0",
  "description": "Kanban-style mission control dashboard for AI agents",
  "type": "module",
  "scripts": {
    "dev": "fastify start -l info -P src/app.js",
    "test": "node --test tests/integration/tasks.test.js && node --test tests/integration/boards.test.js && node --test tests/integration/settings.test.js",
    "test:tasks": "node --test tests/integration/tasks.test.js",
    "test:boards": "node --test tests/integration/boards.test.js",
    "test:settings": "node --test tests/integration/settings.test.js",
    "test:e2e": "node --test tests/e2e/migration-e2e.test.js",
    "test:coverage": "c8 --reporter=html --reporter=text node --test tests/**/*.test.js",
    "lint": "eslint src tests",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/websocket": "^11.0.1",
    "@prisma/client": "^6.1.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "http-errors": "^2.0.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "fastify-cli": "^7.0.1",
    "prisma": "^6.0.0"
  },
  "packageManager": "npm@11.0.0",
  "prisma": {
    "seed": "node src/db/seed.js"
  }
}
