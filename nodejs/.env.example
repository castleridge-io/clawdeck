# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/clawdeck_development"

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET="your-secret-key-change-in-production"

# Server
PORT=3000
HOST=localhost

# CORS
CORS_ORIGIN="*"

# Log Level
LOG_LEVEL="info"

# Archive Settings
ARCHIVE_ENABLED="true"
ARCHIVE_DELAY_HOURS="24"

# Auto-migration on startup
AUTO_MIGRATE="true"
AUTO_SEED="false"

# ============================================
# Seed / Dev Credentials (ONLY for development)
# ============================================
# These are used by `prisma db seed` to create initial users
# IMPORTANT: Change these in production or leave unset
SEED_ADMIN_PASSWORD="changeme"
SEED_OPENCLAW_PASSWORD="changeme"
SEED_API_TOKEN=""  # Leave empty to auto-generate

# ============================================
# OpenClaw User Script
# ============================================
# Used by scripts/create-openclaw-user.js
OPENCLAW_PASSWORD="changeme"

# ============================================
# OAuth (Optional)
# ============================================
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ============================================
# Storage (Optional - S3/MinIO)
# ============================================
# S3_ENDPOINT="http://localhost:9000"
# S3_ACCESS_KEY_ID=""
# S3_SECRET_ACCESS_KEY=""
# S3_BUCKET="clawdeck"
# S3_REGION="us-east-1"
