{
  "name": "clawdeck-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "nodejs",
    "frontend",
    "e2e",
    "shared"
  ],
  "scripts": {
    "dev": "yarn workspace clawdeck dev",
    "dev:frontend": "yarn workspace clawdeck-frontend dev",
    "build": "yarn workspaces foreach -Wt run build",
    "test": "yarn workspace clawdeck test",
    "test:frontend": "yarn workspace clawdeck-frontend test",
    "test:e2e": "docker compose -f docker-compose.e2e.yml up --build",
    "test:e2e:detached": "docker compose -f docker-compose.e2e.yml up -d --build",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "yarn workspaces foreach -Wt --exclude '@clawdeck/shared' run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "neostandard": "^0.12.0",
    "prettier": "^3.4.0"
  }
}
